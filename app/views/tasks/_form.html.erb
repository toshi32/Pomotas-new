<%= form_with(model: @task, local: true ) do |form| %>
<% if @task.errors.any? %>
<div id="error_explanation">
  <h2><%= @task.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="task_title">
  <%= form.label :title,"タスク名" %>
  <%= form.text_field :title %>
</div>
<div class="task_title">
  <%= form.label :content,"内容" %>
  <%= form.text_area :content %>
</div>
<div class="task_title">
  <%= form.label :time_limit, "終了期限" %>
  <%= form.date_select :time_limit, value: Time.zone.now %>
</div>
<div class="field">
  <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
</div>
<div class="task_title">
  <%= form.label :status, "ステータス" %>
  <%= form.select :status, ['notyet', 'done'] %>
</div>
<%= form.submit %>
<% end %>
<%= link_to "タスク一覧にもどる", tasks_path %>