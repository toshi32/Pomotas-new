<h1>タスク詳細画面</h1>
<p>タスク名</p>
<p><%= @task.title %></p>
<p>内容</p>
<p><%= safe_join(@task.content.split("\n"),tag(:br)) %></p>
<p>終了期限</p>
<p><%= @task.time_limit %></p>
<p>
  <strong>Status:</strong>
  <%= link_to @task.status, task_toggle_status_path(@task), method: :patch %>
</p>
<p><% @task.labels.each do |label| %>
  #
  <%= label.name %>
  <% end %></p>
<p><%= link_to 'ポモドーロ', pomodoros_show_path %></p>

<div class="container">
  <p id="notice"><%= notice %></p>
  <p>コメント一覧</p>
  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, task: @task } %>
  </div>
  <%= render partial: 'comments/form', locals: { comment: @comment, task: @task } %>
</div>

<p><%= link_to '編集', edit_task_path(@task) %></p>
<p><%= link_to '戻る', tasks_path %></p>

