<h1 class="main_h1">タスク詳細画面</h1>

<div class="task_details">
  <strong>タスク名</strong>
  <p><%= @task.title %></p>
  <strong>内容</strong>
  <p><%= safe_join(@task.content.split("\n"),tag(:br)) %></p>
  <strong>終了期限</strong>
  <p><%= @task.time_limit %></p>
  <strong>
    <strong>Status:</strong>
    <%= link_to @task.status, task_toggle_status_path(@task), method: :patch %>
  </p>
  <strong><% @task.labels.each do |label| %>
    #
    <%= label.name %>
    <% end %></strong>
</div>


<p><%= link_to 'ポモドーロ', pomodoros_show_path %></p>

<div class="container">
  <p id="notice"><%= notice %></p>
  <p>コメント一覧</p>
  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, task: @task } %>
  </div>
  <%= render partial: 'comments/form', locals: { comment: @comment, task: @task } %>
</div>
<br>
  <p><%= link_to '編集', edit_task_path(@task), class:"btn btn-warning" %>
  <%= link_to '戻る', tasks_path, class:"btn btn-warning" %></p>

